---

- name: Get Kernel Release
  shell: uname -r
  ignore_errors: yes
  register: uname_result
  tags: [rails]

- name: install linux-headers-{{ uname_result.stdout }}
  apt:
    name: linux-headers-{{ uname_result.stdout }}
    force: yes
    state: present
  tags: [rails]
- name: install build-essential
  apt:
    name: build-essential
    state: present
  tags: [rails]
- name: install sqlite3
  apt:
    name: sqlite3
    state: present
  tags: [rails]
- name: install sqlite3
  apt:
    name: libsqlite3-dev
    state: present
  tags: [rails]
    name: zlibc
    name: libz-dev
    name: ruby
    name: ruby-dev
    name: curl
  tags: [rails]
